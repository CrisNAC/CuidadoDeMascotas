<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!-- ===== Tabla Services ===== -->
    <changeSet id="4" author="CrisNAC">
        <createTable tableName="services">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="fk_user" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_service_user"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="fk_service_type" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_service_type"
                             referencedTableName="service_types" referencedColumnNames="id"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="low_price" type="NUMERIC(8,2)">
                <constraints nullable="false"/>
            </column>
            <column name="high_price" type="NUMERIC(8,2)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true"/>
        </createTable>
    </changeSet>
</databaseChangeLog>