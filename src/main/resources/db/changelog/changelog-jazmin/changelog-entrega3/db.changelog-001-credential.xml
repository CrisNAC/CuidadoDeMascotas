<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="01102025-create-table-roles" author="J-Kanami-PS">
        <createTable tableName="roles">
            <column name="id_role" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="01102025-create-table-users" author="J-Kanami-PS">
        <createTable tableName="users">
            <column name="id_user" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(60)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(60)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="hash_password" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>
            <column name="profile_photo" type="TEXT"/>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true"/>
        </createTable>
    </changeSet>

    <changeSet id="01102025-create-table-user-roles" author="J-Kanami-PS">
        <createTable tableName="user_roles">
            <column name="id_user_role" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="fk_role" type="INTEGER">
                <constraints nullable="false" foreignKeyName="fk_userroles_roles" referencedTableName="roles" referencedColumnNames="id_role"/>
            </column>
            <column name="fk_user" type="INTEGER">
                <constraints nullable="false" foreignKeyName="fk_userroles_users" referencedTableName="users" referencedColumnNames="id_user"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
