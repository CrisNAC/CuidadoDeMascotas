<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="21092025-create-table-roles" author="J-Kanami-PS">
        <createTable tableName="roles">
            <column name="id_role" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="21092025-create-table-users" author="J-Kanami-PS">
        <createTable tableName="users">
            <column name="id_user" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(60)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(60)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="hash_password" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>
            <column name="profile_photo" type="TEXT"/>
            <column name="fk_role" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="NOW()"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="NOW()"/>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true"/>
        </createTable>
    </changeSet>

    <!-- FK users.fk_role → roles.id_role -->
    <changeSet id="21092025-add-fk-role" author="J-Kanami-PS">
        <addForeignKeyConstraint
                baseTableName="users"
                baseColumnNames="fk_role"
                constraintName="fk_users_roles"
                referencedTableName="roles"
                referencedColumnNames="id_role"/>
    </changeSet>

    <changeSet id="21092025-create-table-user-roles" author="J-Kanami-PS">
        <createTable tableName="user_roles">
            <column name="id_user_role" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="fk_role" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="fk_user" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="NOW()"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="NOW()"/>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true"/>
        </createTable>
    </changeSet>

    <!-- FK user_roles.fk_role → roles.id_role -->
    <changeSet id="21092025-add-fk-role-user-roles" author="J-Kanami-PS">
        <addForeignKeyConstraint
                baseTableName="user_roles"
                baseColumnNames="fk_role"
                constraintName="fk_userroles_roles"
                referencedTableName="roles"
                referencedColumnNames="id_role"/>
    </changeSet>

    <!-- FK user_roles.fk_user → users.id_user -->
    <changeSet id="21092025-add-fk-user-user-roles" author="J-Kanami-PS">
        <addForeignKeyConstraint
                baseTableName="user_roles"
                baseColumnNames="fk_user"
                constraintName="fk_userroles_users"
                referencedTableName="users"
                referencedColumnNames="id_user"/>
    </changeSet>

</databaseChangeLog>
